<div class="container col-12 col-sm-10 col-md-8 col-xl-6">

<h2 class="mt-5 mb-3">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :floating_labels_form, wrapper_mappings: { select: :floating_labels_select }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "_",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                placeholder: "_",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg w-100 mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
