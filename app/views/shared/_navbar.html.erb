
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <% if user_signed_in? %>
          <%# <li class="nav-item active">
            <%= link_to "Are you a doctor?", "/becomespeedy", class: "nav-link" %>
          <%# </li> %>
          <li class="nav-item">
            <%= link_to "Our services", "/ourservices", class: "nav-link" %>
          </li>

          <li class="nav-item">
            <% if current_user.role == "Patient" %>
              <%= link_to "List all doctors", "/doctors", class: "nav-link" %>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to "#{current_user.prefix} #{current_user.first_name} #{current_user.last_name}", "/dashboard", class: "nav-link", style: "font-weight: bold;"%>
          </li>
          <li class="nav-item dropdown">

            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

        <% elsif params[:role] == "doctor" %>
        <li class="nav-item">
            <%= link_to "Our services", "/ourservices", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path(role: "doctor"), class: "nav-link" %>
          </li>
          <li button type="button" class="nav-cta-btn">
            <%= link_to "Register as a doctor", new_user_session_path(role: "doctor"), class: "btn btn-primary" %>
          </li>

        <% else %>
          <li class="nav-item active">
            <%= link_to "Are you a doctor?", becomespeedy_path(role: "doctor"), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Our services", "/ourservices", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path(role: "patient"), class: "nav-link" %>
          </li>
          <li button type="button" class="nav-cta-btn">
            <%= link_to "Find a Doctor", "/doctors", class: "btn btn-primary" %>
          </li>

        <% end %>
      </ul>
    </div>
  </div>
</div>
