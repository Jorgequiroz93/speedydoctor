<div class="search-box">
  <div class="search-container">
    <%= form_tag doctors_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control search-placeholder",
        placeholder: "Find a doctor by name, specialty, country, language..."
      %>
      <div class="search-button">
      <button type="submit" class="btn btn-primary btn-search"><i class="fas fa-search me-3"></i>Search</button>
      </div>
    <% end %>
  </div>
</div>
