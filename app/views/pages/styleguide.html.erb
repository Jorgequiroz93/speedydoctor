<div class="horizontal-card">
  <div id="top-banner">
    <div>
      <% @review.rating.to_i.times do %>
      <i class="fas fa-star"></i>
      <% end %>
      <% @review.blank_stars.times do %>
      <i class="far fa-star"></i>
      <% end %>
    </div>
    <div>
      <i class="far fa-heart"></i>
    </div>
  </div>
  <div>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "horizontal-card-avatar", alt: "avatar" %>
  </div>
  <div class="card-text">
    <div id="name-field">
      <h6> Name: #{name}</h6>
    </div>
    <div id="speciality">
      <p> Specialty: #{specialty}</p>
    </div>
  </div>
</div>
